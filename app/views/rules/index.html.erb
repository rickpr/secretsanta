<h1>Listing rules</h1>

<table>
  <thead>
    <tr>
      <th>Gifter</th>
      <th>Recipient</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rules.each do |rule| %>
      <tr>
        <td><%= rule.gifter %></td>
        <td><%= rule.recipient %></td>
        <td><%= rule.group.name %></td>
        <td><%= link_to 'Show', [@group, rule] %></td>
        <td><%= link_to 'Edit', edit_group_rule_path(@group, rule) %></td>
        <td><%= link_to 'Destroy', [@group, rule], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rule', new_group_rule_path %>
