<% unless @santum.errors.any? %>
  var new_santum = $("<%= escape_javascript(render @santum) %>").hide();
  $('#santa').append(new_santum);
  $('#santum_<%= @santum.id %>').fadeIn('slow');
<% else %>
  <% @santum.errors.full_messages.each do |message| %>
    $.growl.error({ message: "<%= message %>" });
  <% end %>
<% end %>
$('#new_santum')[0].reset();
